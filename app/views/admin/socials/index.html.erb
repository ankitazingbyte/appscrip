<div class="container">  
  <p id="notice"><%= notice %></p>

  <h1>Socials</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @socials.each do |social| %>
        <tr>
          <td><%= social.title %></td>
          <td><%= social.description %></td>
          <td><%= social.image %></td>
          <td><%= link_to 'Show', admin_social_url(social) %></td>
          <td><%= link_to 'Edit', edit_admin_social_path(social) %></td>
          <td><%= link_to 'Destroy', admin_social_url(social), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Social', new_admin_social_path %>
</div>