<div class="container py-5"> 
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center text-white mb-4">sign up Form</h2>
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <!-- form card login -->
                    <div class="card rounded-0">
                        <div class="card-header">
                            <h3 class="mb-0">signup</h3>
                        </div>
                        <div class="card-body">
                           <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                             <%= devise_error_messages! %>
                                <div class="form-group">
                                  <label for="uname1">Email</label>
                                  <%= f.email_field :email, class: "form-control form-control-lg rounded-0", autofocus: true, autocomplete: "email" %>
                                </div>
                                <div class="form-group">
                                  <label>Password</label>
                                    <% if @minimum_password_length %>
                                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                                    <% end %><br />
                                    <%= f.password_field :password,class: "form-control form-control-lg rounded-0", autocomplete: "off" %>
                                </div>
                                <div class="form-group">
                                  <label>Password Confirmation</label>
                                  <%= f.password_field :password_confirmation,class: "form-control form-control-lg rounded-0", autocomplete: "off" %>
                                </div>
                                <%= f.submit "Sign up", class: "btn btn-success btn-lg float-right" %>
                            <% end %>
                        </div>
                        <!--/card-block-->
                    </div>
                    <!-- /form card login -->
                </div>
            </div>
            <!--/row-->
        </div>
        <!--/col-->
    </div>
    <!--/row-->
    <%= render "devise/shared/links" %>
</div>
<!--/container-->