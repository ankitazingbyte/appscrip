<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-center text-white mb-4">Login Form</h2>
      <div class="row">
        <div class="col-md-6 mx-auto">
          <!-- form card login -->
          <div class="card rounded-0">
            <div class="card-header">
                <h3 class="mb-0">Login</h3>
            </div>
            <div class="card-body">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                    <label for="uname1">Email</label>
                    <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg rounded-0", autocomplete: "email" %> 
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <%= f.password_field :password,class: "form-control form-control-lg rounded-0", autocomplete: "off" %>
                </div>
                <div>
                  <label class="custom-control custom-checkbox">
                    <% if devise_mapping.rememberable? -%>
                       <%= f.check_box :remember_me, class: "custom-control-input" %>
                      <span class="custom-control-indicator"></span>
                      <span class="custom-control-description small text-dark">Remember me on this computer</span>
                    <% end -%>
                  </label>
                </div>
                <%= f.submit "Log in", class: "btn btn-success btn-lg float-right" %>
              <% end %>
            </div>
            <!--/card-block-->
          </div>
          <!-- /form card login -->
        </div>
      </div>
      <!--/row-->
    </div>
    <!--/col-->
  </div>
  <!--/row-->
    <%= render "devise/shared/links" %>
</div>
<!--/container-->